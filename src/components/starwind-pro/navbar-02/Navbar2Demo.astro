---
import Navbar2, { type NavLink } from "./Navbar2.astro";

const links: NavLink[] = [
  {
    label: "Features",
    children: [
      { label: "Analytics", href: "#analytics" },
      { label: "Integrations", href: "#integrations" },
      { label: "Team", href: "#team" },
    ],
  },
  { label: "Pricing", href: "#pricing" },
  { label: "About", href: "#about" },
  { label: "Blog", href: "#blog" },
];
---

<!-- Scrollable container for sticky navbar demo -->
<div
  class="from-muted via-background to-background h-[60vh] w-full overflow-y-auto overscroll-contain bg-linear-to-br"
>
  <Navbar2
    siteName="Starwind Pro"
    links={links}
    ctaText="Get Started"
    ctaHref="#get-started"
    secondaryText="Sign In"
    secondaryHref="#sign-in"
  />

  <!-- Demo content to demonstrate scrolling behavior -->
  <div class="space-y-8 px-4 py-12">
    <div class="mx-auto max-w-2xl">
      <h1 class="font-heading text-3xl font-bold">Nav Demo</h1>
      <p class="text-muted-foreground mt-4 text-pretty">
        Scroll down to see the navbar behavior. The navbar stays fixed at the top of this container.
        Note that the mobile sheet will open relative to the whole webpage, not this container.
      </p>
    </div>

    {
      Array.from({ length: 6 }).map((_, i) => (
        <div class="bg-muted/50 mx-auto max-w-2xl rounded-lg p-6">
          <h3 class="font-semibold">Section {i + 1}</h3>
          <p class="text-muted-foreground mt-2 text-sm">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
            incididunt ut labore et dolore magna aliqua.
          </p>
        </div>
      ))
    }
  </div>
</div>
