---
import SanityImage from '../SanityImage.astro'

interface Props {
  label?: string
  heading?: string
  subtitle?: string
  image?: any
}

const { label, heading, subtitle, image } = Astro.props
---

<section class="bg-accent">
  <div class="mx-auto max-w-7xl px-4 py-24">
    <div class="mb-12">
      {label && (
        <p class="text-sm font-mono text-muted-foreground mb-3 uppercase tracking-wider">{label}</p>
      )}
      {heading && (
        <h2 class="text-4xl font-semibold tracking-tight text-foreground">{heading}</h2>
      )}
      {subtitle && (
        <p class="text-lg text-muted-foreground mt-3 max-w-2xl">{subtitle}</p>
      )}
    </div>

    {image?.asset && (
      <div class="overflow-hidden rounded-lg border-2 border-border">
        <SanityImage image={image} width={1200} class="size-full object-cover" />
      </div>
    )}
  </div>
</section>
