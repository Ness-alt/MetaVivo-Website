---
import type { ListProps } from "astro-portabletext/lib/types"

type Props = ListProps

const { node, index, isInline, ...attrs } = Astro.props
const isBullet = node.listItem === 'bullet'
---

{isBullet ? (
  <ul class="list-disc ml-6 mb-4 space-y-1" {...attrs}><slot /></ul>
) : (
  <ol class="list-decimal ml-6 mb-4 space-y-1" {...attrs}><slot /></ol>
)}
